<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#808080"/> <!-- 눌렸을 때의 배경색 -->
            <stroke android:width="2dp" android:color="#FFFFFF"/> <!-- 테두리 색상 (눌린 상태) -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- 일반 상태의 배경색 -->
            <stroke android:width="2dp" android:color="#FFFFFF"/> <!-- 테두리 색상 (일반 상태) -->
        </shape>
    </item>
</selector>
