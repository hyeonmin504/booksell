<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_weight="1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="책 판매하기"
            android:textSize="30dp"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textColor="@color/black">
        </TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000"></View>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="책 정보를 적어주세요."
                android:textColor="@color/black"
                android:textSize="20dp"></TextView>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="책 이름"
                android:id="@+id/edt_bookname"></EditText>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="저자"
                android:id="@+id/edt_writer"></EditText>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="출판사"
                android:id="@+id/edt_publisher"></EditText>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="출판일 (ex. 20000504)"
                android:id="@+id/edt_publisher_date"
                ></EditText>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="정가 (ex. 20000)"
                android:id="@+id/edt_price"></EditText>



        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_buy"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:text="검색페이지"
            android:textSize="17dp"
            android:background="@drawable/button_border"

            />

        <Button
            android:id="@+id/btn_sell"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:text="판매페이지"
            android:textSize="17dp"
            android:background="@drawable/button_border"
            />

        <Button
            android:id="@+id/btn_chat"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:text="채팅페이지"
            android:textSize="17dp"
            android:background="@drawable/button_border"

            />


        <Button
            android:id="@+id/btn_my"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_margin="1px"
            android:layout_weight="1"
            android:text="마이페이지"
            android:textSize="17dp"
            android:background="@drawable/button_border"
            />

    </LinearLayout>

</LinearLayout>